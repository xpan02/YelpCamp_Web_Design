<% include ../partials/header %>


<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp</h1>
        <p>view our hand-picked campgounds from all over the world</p>
        <P>
        <a class="btn btn-primary btn-lg" href="/campground/new">post a new campground</a>
        </P>
    </header>
    
    <div class="row" style="display:flex; flex-wrap: wrap;">
    <% campground.forEach(function(element) { %>
        <div class="col-md-4 col-sm-6" >
               <div class="thumbnail"style="height:300px;" >    
                <img src="<%= element.image %>" style="width:100%;height:70%;"></img>
                   <div class="caption">
                     <h4><%= element.name %></h4> 
                   </div>
                  <p>
                       <a href="/campground/<%=element._id%>" class="btn btn-primary ">Details</a>
                  </p>
                 
               </div>
        </div>
     <% }); %>
    
    </div>
    
    
    
    <% include ../partials/footer %>
   
</div>