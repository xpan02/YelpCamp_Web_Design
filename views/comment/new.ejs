              <input type="text" class="form-control" name="comment[text]" placeholder="text of the comment">
              </div>
     
              <div class="form-group">
              <button class="btn btn-primary btn-lg btn-block">Submit</button>
             </div>
             
             
            </form>
            
            <a href="/campground/<%=campground.id%>">Go back</a>
        </div>
 </div>
